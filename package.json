{
  "name": "xahpayroll",
  "version": "1.0.0",
  "description": "XAH Payroll - Decentralized hourly payroll system powered by XAH microtransactions",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:host": "cd frontend && npm run dev -- --host",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "deploy": "cd frontend && npm run deploy",
    "deploy:preview": "cd frontend && npm run deploy:preview",
    "lint": "cd frontend && npm run lint"
  },
  "keywords": [
    "xrpl",
    "payroll",
    "blockchain",
    "xah",
    "payment-channels",
    "decentralized"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}

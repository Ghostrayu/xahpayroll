# XAH Payroll Backend Environment Variables
# Copy this file to .env and FILL IN YOUR ACTUAL VALUES
# =====================================================
# DATABASE CONFIGURATION
# =====================================================

# PostgreSQL Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=xahpayroll_dev
DB_USER=xahpayroll_user
DB_PASSWORD=your_secure_password_here

# Database URL (alternative format for some ORMs)
DATABASE_URL=postgresql://xahpayroll_user:your_secure_password_here@localhost:5432/xahpayroll_dev

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# =====================================================
# SERVER CONFIGURATION
# =====================================================

# Server Port
PORT=3001

# Node Environment (development, production, test)
NODE_ENV=development

# API Base URL
API_BASE_URL=http://localhost:3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# =====================================================
# SECURITY
# =====================================================

# JWT Secret (CHANGE THIS! Use a strong random string)
JWT_SECRET=your_jwt_secret_change_this

# JWT Expiration
JWT_EXPIRES_IN=7d

# Session Secret (CHANGE THIS! Use a strong random string)
SESSION_SECRET=your_session_secret_change_this

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =====================================================
# XAMAN WALLET INTEGRATION
# =====================================================

# Xaman API Credentials (get from https://apps.xumm.dev/)
XAMAN_API_KEY=your_xaman_api_key_here
XAMAN_API_SECRET=your_xaman_api_secret_here

# =====================================================
# XRPL CONFIGURATION
# =====================================================

# XRPL Network (testnet, devnet, or mainnet)
XRPL_NETWORK=testnet

# XRPL WebSocket URL
XRPL_WEBSOCKET=wss://s.altnet.rippletest.net:51233

# XRPL JSON-RPC URL (alternative)
XRPL_JSON_RPC=https://s.altnet.rippletest.net:51234

# Escrow Wallet (NEVER commit real wallet secrets!)
# Generate test wallet: https://xrpl.org/xrp-testnet-faucet.html
XRPL_ESCROW_ADDRESS=
XRPL_ESCROW_SECRET=

# =====================================================
# PAYMENT CONFIGURATION
# =====================================================

# Default payment frequency (in minutes)
DEFAULT_PAYMENT_FREQUENCY=60

# Default timeout threshold (in minutes)
DEFAULT_TIMEOUT_THRESHOLD=60

# Minimum session duration (in minutes)
MINIMUM_SESSION_MINUTES=15

# Grace period (in minutes)
GRACE_PERIOD_MINUTES=5

# =====================================================
# LOGGING
# =====================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=debug

# Log Format (json or simple)
LOG_FORMAT=simple

# =====================================================
# EMAIL CONFIGURATION (Optional)
# =====================================================

# SMTP Settings (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@xahpayroll.xyz

# =====================================================
# RATE LIMITING
# =====================================================

# Rate limit window (in minutes)
RATE_LIMIT_WINDOW=15

# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# FILE UPLOADS (Optional)
# =====================================================

# Max file size (in bytes) - 5MB
MAX_FILE_SIZE=5242880

# Upload directory
UPLOAD_DIR=./uploads

# =====================================================
# FEATURE FLAGS
# =====================================================

# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_AUTO_PAYMENTS=true

# =====================================================
# DEVELOPMENT TOOLS
# =====================================================

# Enable debug mode
DEBUG=true

# Enable API documentation
ENABLE_API_DOCS=true

# Enable request logging
ENABLE_REQUEST_LOGGING=true
